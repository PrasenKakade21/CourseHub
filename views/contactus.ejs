<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - CourseHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
       
        #contact-header {
            background: url('https://via.placeholder.com/1600x400') no-repeat center center/cover;
            height: 400px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-align: center;
        }
        #contact-header h1 {
            font-size: 4rem;
            font-weight: bold;
        }
        #contact-info-section {
            padding: 50px 0;
            background-color: #f7f7f7;
        }
        #contact-info-section .info-box {
            text-align: center;
            padding: 20px;
        }
        #contact-info-section .info-box i {
            font-size: 2.5rem;
            color: #007bff;
        }
        #contact-info-section .info-box h4 {
            margin-top: 10px;
            font-size: 1.5rem;
        }
        #contact-info-section .info-box p {
            font-size: 1rem;
            color: #6c757d;
        }
        #contact-form-section {
            padding: 50px 0;
        }
        #contact-form-section form {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }
        #contact-form-section .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
        }
        #contact-form-section .btn-primary:hover {
            background-color: #0056b3;
        }
        #social-media-section {
            padding: 50px 0;
            background-color: #007bff;
            color: white;
        }
        #social-media-section h3 {
            text-align: center;
            margin-bottom: 30px;
        }
        #social-media-section .social-icons i {
            font-size: 2rem;
            margin: 0 10px;
            color: white;
        }
        #social-media-section .social-icons i:hover {
            color: #d1d1d1;
        }
    </style>
</head>
<body>
<%- include('navbar') %>
    <!-- Header Banner -->
    <header id="contact-header">
        <h1>Contact Us</h1>
    </header>

    <!-- Contact Info Section -->
    <section id="contact-info-section">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="info-box">
                        <i class="bi bi-geo-alt-fill"></i>
                        <h4>Our Location</h4>
                        <p>123 Learning Lane, Edutown, USA</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <i class="bi bi-telephone-fill"></i>
                        <h4>Call Us</h4>
                        <p>+1 234 567 890</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-box">
                        <i class="bi bi-envelope-fill"></i>
                        <h4>Email Us</h4>
                        <p>support@coursehub.com</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section id="contact-form-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <h2 class="text-center mb-4">Get In Touch</h2>
                    <form id="contact-form">
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="5" placeholder="Enter your message" required></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" onclick="ContactMessage()">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Social Media Section -->
    <section id="social-media-section">
        <div class="container">
            <h3>Connect with Us</h3>
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <div class="social-icons">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-twitter"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('footer') %>
    <!-- Bootstrap JS (for icons) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
