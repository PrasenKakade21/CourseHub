<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Course Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .course-banner {
        background: url("https://via.placeholder.com/1500x400") no-repeat center
          center/cover;
        height: 400px;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <%- include('navbar') %>

    <!-- Course Banner -->
    <section class="course-banner">
      <div class="container">
        <h1 class="display-4"><%= course.title %></h1>
      </div>
    </section>

    <% 
    console.log("course info",purchaseStatus);
    %>
    
    <!-- Course Overview -->
    <section class="py-5">
      <div class="container">
        <h2>Course Overview</h2>
        <p><%= course.description %></p>
        <h5>Instructor: Prof. <%= mentor.username %></h5>
        <h4>Price: $<%= course.price %></h4>
        <a
          class="btn btn-primary" 
          <% if (purchaseStatus != 200) { %>
           
            onclick="PurchaseCourse('<%= course._id %>')" 
          <% } else { %>
           onclick="alert('Already Purchased')"
            <% } %>
          >
          <% if (purchaseStatus == 200) { %>
           Purchased
          <% } else { %>
            Enroll Now
           <% } %>
        </a>
      </div>
    </section>

    <!-- Instructor Information -->
    <!-- <section class="py-5 bg-light">
        <div class="container">
            <h2></h2>
        </div>
    </section> -->

    <!-- Curriculum -->
    <section class="py-5">
      <div class="container">
        <h2>Curriculum</h2>
        <ul class="list-group">
          <% course.content.forEach(function(topic) { %>
          <li class="list-group-item"><%= topic %></li>
          <% }); %>
        </ul>
      </div>
    </section>

    <%- include('footer') %>
  </body>
</html>
